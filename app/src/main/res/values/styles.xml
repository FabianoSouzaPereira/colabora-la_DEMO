<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Colaborala" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/very_Dark_Blue</item>
        <item name="colorPrimaryVariant">@color/very_Dark_Blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/very_Dark_Blue</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Muda a cor do floating buttom  -->
        <item name="colorAccent">@color/purple_500</item>
        <!-- android:textColorSecondary -->
        <item name="android:textColorSecondary">@color/colorBlack</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/very_Dark_Blue</item>
        <!-- Change color more_vert -->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <!-- Muda a cor somente os 3 pontos -->
        <item name="actionOverflowButtonStyle">@style/DotsDarkTheme</item>
    </style>

    <!-- Muda a cor somente os 3 pontos -->
    <style name="DotsDarkTheme" parent="@style/Widget.AppCompat.ActionButton.Overflow" >
        <item name="android:tint">@color/white</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="color">@color/white</item>
    </style>

    <style name="DrawerArrowStyle2" parent="@style/Widget.MaterialComponents.AppBarLayout.Primary">
        <item name="android:textColorSecondary">@color/white</item>
        <item name="color">@color/white</item>
    </style>

    <style name="Theme.Colaborala.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Colaborala.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Colaborala.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>